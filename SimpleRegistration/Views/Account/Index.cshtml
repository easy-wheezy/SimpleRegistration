@model SimpleRegistration.Presentation.Registration.RegistrationRequestViewModel
@{
    ViewData["Title"] = "Index";
}

<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>


<h2>Account Registration Page</h2>
<form asp-action="RegisterAcount" asp-controller="Account" method="POST" data-ajax="true" data-ajax-update="#Notifications" data-ajax-mode="replace">
    <div>
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.Email)
            <div class="form-control">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="form-control">
                @Html.TextBoxFor(model => model.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.Password)
            <div class="form-control">
                @Html.LabelFor(model => model.Password)
            </div>
            <div class="form-control">
                @Html.PasswordFor(model => model.Password)
            </div>
        </div>
        <input type="submit" value="Register Account" />
    </div>
</form>
<div id="Notifications"></div>

